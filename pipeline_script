pipeline {
    agent any

    environment {
        NEW_POST = 'https://tracking.novaposhta.ua/#/uk'
        QAUTO2 = 'https://guest:welcome2qauto@qauto2.forstudy.space'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/YuliiaU13/Homework_2.1'
            }
        }
        stage('Install Python') {
            steps {
                sh '''
                apt-get update
                apt-get install -y python3 python3-dev python3-pip
                rm -rf venv
                apt-get install -y python3.11-venv
                python3 -m venv venv
                '''
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''#!/bin/bash
                apt-get update
                apt-get install -y python3-dev libpq-dev
                source venv/bin/activate
                pip install -r requirements.txt'''
            }
        }
        stage('Run tests') {
            steps {
                sh '''#!/bin/bash
                    source venv/bin/activate
                    pytest -m "nova_poshta or allure_qauto" --alluredir allure-results'''
            }
        }
    }
}